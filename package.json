{
  "name": "minimal-slp-wallet",
  "version": "7.0.0",
  "description": "A minimalist Bitcoin Cash (BCH) wallet npm library, for use in a web apps.",
  "type": "module",
  "main": "./index.js",
  "module": "./dist/minimal-slp-wallet.min.js",
  "scripts": {
    "start": "node index.js",
    "test": "TEST=unit c8 mocha test/unit/",
    "test:integration": "export REST_URL=http://localhost:5942/v6 && export CONSUMER_URL=https://free-bch.fullstack.cash && mocha --timeout 35000 test/integration/",
    "test:temp": "mocha --timeout 25000 -g '#UTXOs' test/integration/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i lib/ -o docs",
    "coverage": "c8 --reporter=html mocha test/unit/ --exit",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "node esbuild.config.js",
    "build:cjs": "esbuild index.js --bundle --platform=node --format=cjs --outfile=dist/minimal-slp-wallet.cjs"
  },
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "javascript",
    "cryptocurrency",
    "react",
    "front end",
    "client",
    "apidoc",
    "slp",
    "tokens"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "minimal-slp-wallet",
    "url": "localhost:5000"
  },
  "standard": {
    "ignore": [
      "dist/**"
    ]
  },
  "repository": "Permissionless-Software-Foundation/minimal-slp-wallet",
  "dependencies": {
    "@chris.troutner/retry-queue": "1.0.11",
    "@psf/bch-js": "7.1.7",
    "bch-consumer": "1.6.2",
    "bch-donation": "1.1.2",
    "crypto-js": "4.0.0"
  },
  "devDependencies": {
    "apidoc": "1.2.0",
    "c8": "10.1.3",
    "chai": "4.2.0",
    "coveralls": "3.1.0",
    "esbuild": "0.20.0",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.3.8",
    "lodash.clonedeep": "4.5.0",
    "mocha": "9.2.1",
    "semantic-release": "19.0.3",
    "sinon": "9.2.0",
    "standard": "16.0.4"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./dist/minimal-slp-wallet.cjs"
    }
  }
}
