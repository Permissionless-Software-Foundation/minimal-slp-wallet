{
  "name": "minimal-slp-wallet-v2",
  "version": "2.0.0",
  "description": "A minimalist Bitcoin Cash (BCH) wallet npm library, for use in a web apps.",
  "main": "dist/minimal-slp-wallet.min.js",
  "scripts": {
    "start": "node index.js",
    "test": "TEST=unit nyc mocha test/unit/",
    "test:integration": "mocha --timeout 25000 test/integration/",
    "test:temp": "mocha --timeout 25000 -g '#UTXOs' test/integration/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i lib/ -o docs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "nyc --reporter=html mocha test/unit/ --exit",
    "build": "browserify index.js -p tinyify --s SlpWallet -o dist/minimal-slp-wallet.min.js"
  },
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "javascript",
    "cryptocurrency",
    "react",
    "front end",
    "client",
    "apidoc",
    "slp",
    "tokens"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "minimal-slp-wallet",
    "url": "localhost:5000"
  },
  "repository": "PSF-Skunkworks/minimal-slp-wallet-v2",
  "dependencies": {
    "@psf/bch-js": "4.16.1",
    "apidoc": "^0.25.0",
    "bch-donation": "^1.1.1",
    "crypto-js": "^4.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.6",
    "lodash.clonedeep": "^4.5.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "semantic-release": "^17.4.0",
    "sinon": "^9.2.0",
    "standard": "^14.3.4",
    "tinyify": "^3.0.0"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  }
}
